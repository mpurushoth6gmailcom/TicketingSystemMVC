@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@model IEnumerable<TicketLogModel>
@{ Layout = "_Layout"; ViewBag.Title = "All Tickets";}

<h2>All Reservations</h2>
@*<a asp-action="AddTicket" asp-route-id="@TicketLogModel" class="btn btn-sm btn-primary">Add Tickets</a>*@
<a asp-action="Create" class ="btn btn-sm btn-primary">Add Tickets</></a>
@*<a asp-action="UpdateTicket" class="btn btn-sm btn-secondary">Get Ticket</a>*@

<table class="table table-sm table-striped table-bordered m-2">
    <thead>
        <tr>
            <th>Ticket ID</th>
            <th>Ticket Title</th>
            <th>Ticket Description</th>
            <th>Ticket Category</th>
            <th>Created Date</th>
            <th>Update</th>
            <th>Delete</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var r in Model)
        {
            <tr>
                <td>@r.Ticket_Id</td>
                <td>@r.Ticket_Title</td>
                <td>@r.Ticket_Description</td>
                <td>@r.Ticket_Category</td>
                <td>@r.Create_Date</td>
                <td>
                    <a asp-action="Edit" class="btn btn-info" asp-route-id="@r.Ticket_Id">
                        Edit
                    </a>
                </td>
                <td>
                    <a asp-action="DeleteTicketDetails" class="btn btn-danger" asp-route-id="@r.Ticket_Id">
                        Delete
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>